<%layout ('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <!-- offset-3 centres it -->
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <% if (process.env.NODE_ENV !=="production" ) { %>
                    <!-- ie in development mode -->
                    <p>
                        <%= err.stack %>
                    </p><!-- show error stack -->
                    <% } %>
            </div>
        </div>
    </div>